@model IEnumerable<DIY_v2.Models.TaskerComment>

@{
    ViewBag.Title = "管理師傅評價";
}
@{
    Layout = "~/Views/Shared/_LayoutForbackendUI.cshtml";
}
<style>
    body {
        font-size:24px;
    }
</style>
<div class="col-md-10">
    <h2>管理師傅評價</h2>

    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MemberAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Star)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Member.MemberAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tasker.TaskerName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberAccount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Star)
                    </td>*@
