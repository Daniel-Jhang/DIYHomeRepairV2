<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DIY居家修繕</title>
    <link rel="stylesheet" href="~/static/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/static/css/animate.css">
    <link rel="stylesheet" href="~/static/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/static/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/static/css/magnific-popup.css">
    <link rel="stylesheet" href="~/static/css/aos.css">
    <link rel="stylesheet" href="~/static/css/ionicons.min.css">
    <link rel="stylesheet" href="~/static/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/static/css/jquery.timepicker.css">
    <link rel="stylesheet" href="~/static/css/flaticon.css">
    <link rel="stylesheet" href="~/static/css/icomoon.css">
    <link rel="stylesheet" href="~/static/css/style.css">
    <link rel="stylesheet" href="~/Content/mydiy.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
   

    <style>

        .dropdown-toggle {
            color: black;
            font-size: 10px;
        }

        .pos {
            position: relative;
            top: 20px;
            margin: 15px;
            font-size: 15px;
        }

        .posB {
            position: relative;
            top: 5px;
            margin: 15px;
            font-size: 15px;
        }


        .dropdown-menu {
        }

            .dropdown-menu.columns-2 {
                min-width: 400px;
            }

            .dropdown-menu.columns-3 {
                min-width: 600px;
            }

            .dropdown-menu li a {
                padding: 5px 15px;
                font-weight: 300;
            }

        .multi-column-dropdown {
            list-style: none;
            margin: 0px;
            padding: 0px;
            color: rgba(0,0,0,0.6);
            text-shadow: 2px 8px 6px rgba(0,0,0,0.2), 0px -5px 35px rgba(255,255,255,0.3);
        }

            .multi-column-dropdown li a {
                display: block;
                clear: both;
                line-height: 1.428571429;
                color: #333;
                white-space: normal;
            }

                .multi-column-dropdown li a:hover {
                    text-decoration: none;
                    color: #262626;
                    background-color: #999;
                }

        @@media (max-width: 767px) {
            .dropdown-menu.multi-column {
                min-width: 240px !important;
                overflow-x: hidden;
            }
        }

        .chip {
            display: inline-block;
            padding: 0 3px;
            height: 35px;
            font-size: 16px;
            line-height: 30px;
            border-radius: 25px;
            background-color: #f1f1f1;
        }

            .chip img {
                float: left;
                margin: 0 10px 0 0px;
                height: 30px;
                width: 30px;
                border-radius: 50%;
            }

        .label {
            color: white;
            padding: 8px;
        }

        .success {
            background-color: #04AA6D;
            line-height: 30px;
            border-radius: 25px;
        }

        .warning {
            background-color: #ff9800;
            line-height: 30px;
            border-radius: 35px;
        }
        /* Orange */
        /* Green */
        .cs1 {
            background-color: #4fb7ca;
        }

       
    </style>

</head>


<body>
    <div class="py-3 cs1">
        <div class="container-fluid">
            <div class="row  d-flex flex-row  col-md-12">
                <div class="col-md-2  ">
                    <a href="#"><img src="~/Images/元件/logo.png" /></a><span style="color: white;position:relative;top:5px;padding-right:15px;font-size:25px;"><b>後台管理</b></span>

                </div>

                <div class="col-md-8">

                </div>
                <div class="col-md-2 " style="position:relative;bottom:-5px;">


                    @{
                        if (@Session["Permission"]?.ToString() != "0")
                        {


                            <div class="MyUser">
                                <div class="chip">
                                    @{
                                        //這邊是登入後頭像設定
                                        if (@Session["Permission"]?.ToString() == "2")
                                        {
                                            <img src="~/Images/元件/師傅.png" alt="Person" width="96" height="96">
                                        }
                                        if (@Session["Permission"]?.ToString() == "1")
                                        {
                                            <img src="~/Images/元件/Userimg.png" alt="Person" width="96" height="96">
                                        }


                                    }



                                    @if (@Session["Permission"]?.ToString() == null)
                                    {
                                        <a class="btn btn-success" href="@Url.Action("Login","MemberLogin")">登入</a>
                                    }
                                    else
                                    {
                                        <span>Hi! @Session["MemberName"]</span>
                                    }
                                    <a class="btn btn-success" href="@Url.Action("Logout","Member")">登出</a>
                                </div>
                            </div>
                        }
                        else
                        {
                            /////這邊事後台管理頭像部分
                            <div @*style="position:relative; left:900px;"*@><img src="~/Images/元件/BOSS.png" alt="Person" width="30" height="30"><a class="btn btn-success" href="@Url.Action("Logout","Member")">登出</a></div>
                        }
                    }


                </div>
            </div>
        </div>
    </div>

    <aside id="sidebar" class="column">
        <div class="container-fluid" style="height:1000px;">
            <div class="row">



                <div class="col-lg-2 col-md-2 col-xs-12 sidebar " style="background-color: black; height: 1500px;">
                    @*搜尋欄*@
                    <div class="sidebar-box" style="background-color: black;">
                        <form class="search-form" method="get">
                            <div class="form-group">
                                <input type="text" class="form-control" name="keyword" placeholder="" style="border-color: #4fb7ca; background-color: black;">
                                <button type="submit" class="icon ion-ios-search" style="color: #4fb7ca; border: 5px; "></button>
                            </div>
                        </form>
                    </div>
                    @*選取按鈕*@
                    <div class="sidebar-box " style="background-color: black;">
                        <h3 class="heading"><span class="btn btn-info btn-lg glyphicon glyphicon-list">項目  </span></h3>
                        <ul class="categories " style="background-color: black;">

                            <li>
                                <a href="@Url.Action("ManageProduct","Backend")" class="btn btn-info btn-lg glyphicon glyphicon-pencil" style="color:white;">商品資料</a>
                            </li>


                            <li>
                                <a href="@Url.Action("TaskerIndex","Backend")" class="btn btn-info btn-lg glyphicon glyphicon glyphicon-pencil" style="color:white;">師傅資料</a>
                            </li>


                            <li>
                                <a href="@Url.Action("ManageMember","Backend")" class="btn btn-info btn-lg glyphicon glyphicon glyphicon-pencil" style="color:white;">會員資料</a>
                            </li>


                            <li>
                                <a href="@Url.Action("ManageOrder","Backend")" class="btn btn-info btn-lg glyphicon glyphicon glyphicon-pencil" style="color:white;">訂單資料</a>
                            </li>

                        </ul>
                    </div>
                </div>

                @RenderSection("scripts", required: false)
                @RenderBody()

            </div>
        </div>
    </aside> <!-- .section -->

    @RenderSection("scripts", required: false)



    <script src="~/static/js/jquery.min.js"></script>
    <script src="~/static/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/static/js/popper.min.js"></script>
    <script src="~/static/js/bootstrap.min.js"></script>
    <script src="~/static/js/jquery.easing.1.3.js"></script>
    <script src="~/static/js/jquery.waypoints.min.js"></script>
    <script src="~/static/js/jquery.stellar.min.js"></script>
    <script src="~/static/js/owl.carousel.min.js"></script>
    <script src="~/static/js/jquery.magnific-popup.min.js"></script>
    <script src="~/static/js/aos.js"></script>
    <script src="~/static/js/jquery.animateNumber.min.js"></script>
    <script src="~/static/js/bootstrap-datepicker.js"></script>
    <script src="~/static/js/scrollax.min.js"></script>
    <script src="~/static/js/google-map.js"></script>
    <script src="~/static/js/main.js"></script>

</body>
</html>
