<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 應用程式</title>
    <link rel="stylesheet" href="~/static/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="~/static/css/animate.css">
    <link rel="stylesheet" href="~/static/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/static/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/static/css/magnific-popup.css">
    <link rel="stylesheet" href="~/static/css/aos.css">
    <link rel="stylesheet" href="~/static/css/ionicons.min.css">
    <link rel="stylesheet" href="~/static/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/static/css/jquery.timepicker.css">
    <link rel="stylesheet" href="~/static/css/flaticon.css">
    <link rel="stylesheet" href="~/static/css/icomoon.css">
    <link rel="stylesheet" href="~/static/css/style.css">
    <link rel="stylesheet" href="~/Content/mydiy.css">
    <style>

        .dropdown-toggle {
            color: black;
            font-size: 10px;
        }

        .pos {
            position: relative;
            top: 20px;
            margin: 15px;
            font-size: 15px;
        }

        .posB {
            position: relative;
            top: 5px;
            margin: 15px;
            font-size: 15px;
        }


        .dropdown-menu {
        }

            .dropdown-menu.columns-2 {
                min-width: 400px;
            }

            .dropdown-menu.columns-3 {
                min-width: 600px;
            }

            .dropdown-menu li a {
                padding: 5px 15px;
                font-weight: 300;
            }

        .multi-column-dropdown {
            list-style: none;
            margin: 0px;
            padding: 0px;
            color: rgba(0,0,0,0.6);
            text-shadow: 2px 8px 6px rgba(0,0,0,0.2), 0px -5px 35px rgba(255,255,255,0.3);
        }

            .multi-column-dropdown li a {
                display: block;
                clear: both;
                line-height: 1.428571429;
                color: #333;
                white-space: normal;
            }

                .multi-column-dropdown li a:hover {
                    text-decoration: none;
                    color: #262626;
                    background-color: #999;
                }

        @@media (max-width: 767px) {
            .dropdown-menu.multi-column {
                min-width: 240px !important;
                overflow-x: hidden;
            }
        }

        .chip {
            display: inline-block;
            padding: 0 3px;
            height: 30px;
            font-size: 16px;
            line-height: 30px;
            border-radius: 25px;
            background-color: #f1f1f1;
        }

            .chip img {
                float: left;
                margin: 0 10px 0 0px;
                height: 30px;
                width: 30px;
                border-radius: 50%;
            }

        .label {
            color: white;
            padding: 8px;
        }

        .success {
            background-color: #04AA6D;
            line-height: 30px;
            border-radius: 25px;
        }

        .warning {
            background-color: #ff9800;
            line-height: 30px;
            border-radius: 35px;
        }
        /* Orange */
        /* Green */
        .cs1 {
            background-color: #dbcc8f;
        }
    </style>

</head>

<body class="goto-here">
    <div class="py-5 cs1">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light " id="ftco-navbar" style="position:absolute; z-index:7">
                <div class="container">
                    <a class="navbar-brand" href=""><img src="~/Images/元件/logo.png" /> DIY居家修繕</a>
                    <button class="navbar-toggler " type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="oi oi-menu"></span> Menu
                    </button>
                    <div class="collapse navbar-collapse" id="ftco-nav">

                        <div class="MyUser">
                            <div class="chip">
                                <img src="~/Images/元件/Userimg.png" alt="Person" width="96" height="96">
                                <span>Hi! @Session["MemberName"]</span>
                                <a class="btn btn-success" href="@Url.Action("Logout","Member")">登出</a>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    @RenderSection("scripts", required: false)
    @RenderBody()

