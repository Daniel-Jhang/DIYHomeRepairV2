<h2>會員註冊</h2>

<div class="wrapper" style="background-image: url('/Images/元件/登入背景11.jpg'); ">
    <div class="inner">
        <div class="image-holder">
            <img src="~/Images/元件/登入背景12.jpg" alt="">
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <h3>會員註冊</h3>
            <div class="form-group">


                @Html.EditorFor(model => model.MemberAccount, new { htmlAttributes = new { @class = "form-control", placeholder = "會員帳號" } })
                @Html.ValidationMessageFor(model => model.MemberAccount, "", new { @class = "text-danger" })
                <input type="text" id="MemberPwd" name="MemberPwd" class="form-control  " placeholder="會員密碼" />
                <span id="MemberPwdError" class="field-validation-error text-danger" data-valmsg-for="MemberPwd" data-valmsg-replace="true" style=@ViewData["MemberPwdError"]>密碼不得空白，最少八個最多十二個字符，至少一個大寫字母，一個小寫字母，一個數字和一個特殊字符</span>

            </div>

            <div class="form-wrapper">


                @Html.EditorFor(model => model.MemberName, new { htmlAttributes = new { @class = "form-control", placeholder = "姓名" } })
                @Html.ValidationMessageFor(model => model.MemberName, "", new { @class = "text-danger" })

            </div>

            <div class="form-wrapper">
                <select name="MemberGender" id="" class="form-control">
                    <option value="" disabled selected>性別</option>
                    <option value="M">男</option>
                    <option value="F">女</option>
                </select>

                @*@Html.RadioButtonFor(m => m.MemberGender, "M")<label>男性</label>
                    @Html.RadioButtonFor(m => m.MemberGender, "F")<label>女性</label>
                    @Html.ValidationMessageFor(model => model.MemberGender, "", new { @class = "text-danger" })*@

            </div>

            <div class="form-wrapper">


                @Html.EditorFor(model => model.MemberBirthday, new { htmlAttributes = new { @class = "form-control", placeholder = "生日",type="date" } })
                @Html.ValidationMessageFor(model => model.MemberBirthday, "", new { @class = "text-danger" })

            </div>

            <div class="form-wrapper">


                @Html.EditorFor(model => model.MemberNickname, new { htmlAttributes = new { @class = "form-control", placeholder = "暱稱" } })
                @Html.ValidationMessageFor(model => model.MemberNickname, "", new { @class = "text-danger" })

            </div>

            <div class="form-wrapper">


                @Html.EditorFor(model => model.MemberEmail, new { htmlAttributes = new { @class = "form-control", placeholder = "信箱" } })
                @Html.ValidationMessageFor(model => model.MemberEmail, "", new { @class = "text-danger" })

            </div>

            <div class="form-wrapper">


                @Html.EditorFor(model => model.MemberAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "地址" } })
                @Html.ValidationMessageFor(model => model.MemberAddress, "", new { @class = "text-danger" })

            </div>

            <div class="form-wrapper">


                @Html.EditorFor(model => model.MemberPhone, new { htmlAttributes = new { @class = "form-control", placeholder = "手機" } })
                @Html.ValidationMessageFor(model => model.MemberPhone, "", new { @class = "text-danger" })
                <input type="hidden" name="Permission" value="2" />
            </div>



            <input type="submit" value="會員註冊" class="buttonA" onclick="btclick()" />
            @ViewBag.Message



        }





    </div>
</div>

